@{
    ViewBag.Title = "Home Page";
}
@{
    if(ViewBag.User==null)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_UserLayout.cshtml";
    }
        

}
<div class="main-index-div">
    <input id="controlerUrl" type="hidden" value="@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()" />
    <div class="row main-title container">
        <span class="titleSpan">
            Welcome to your personal cookBook asistent, where safety is number one priority
        </span>
    </div>
    <div style="margin: 0 auto;">
        <div class="categories-div container">
            <div class="full-category" id="breakfast">
                <div class="specific-category breakfast-img"><img src="~/Content/img/breakfast_img3.jpg" /></div>
                <div class="category-title">Breakfast</div>
            </div>
            <div class="full-category" id="lunch">
                <div class="specific-category lunch-img"></div>
                <div class="category-title">Lunch</div>
            </div>
            <div class="full-category" id="dinner">
                <div class="specific-category dinner-img"></div>
                <div class="category-title">Dinner</div>
            </div>
          
           
           
        </div>        
    </div>
</div>
<script>
    $("#usernameLabel").text("@ViewBag.User");
</script>
<script src="~/Scripts/Index.js"></script>